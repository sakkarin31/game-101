# main.kv
FloatLayout:
    Background:
        id: background
        canvas.before:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "background.png"

    FloorImage:
        source: "floor.png"
        pos_hint: {"center_x": 0.5, "center_y": 0.25}

    FloorImage:
        source: "floor.png"
        pos_hint: {"center_x": 0.3, "center_y": 0.6}

    CharacterImage:
        source: "character.png"
        pos_hint: {"center_x": 0.7, "center_y": 0.7}

<FloorImage@Image>:
    size_hint: None, None
    size: 500,500
    allow_stretch: True

<CharacterImage@Image>:
    size_hint: None, None
    size: 500, 500
    allow_stretch: True